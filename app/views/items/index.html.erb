<h1>Here are the items currently listed for sale</h1>

<% @items.each do |item| %>
    <div class="item">
      <h2><%= item.name %></h2>
      <p><%= item.price %></p>
      <p><%= item.seller.email %></p>
      <%= button_to "View Details", item_path(item.id), method: :get %>
    </div>
  <% end %>