<h1>New Item</h1>

<%= form_with model: @item do |form| %>
    <div>
        <%= form.label :name %><br>
        <%= form.text_field :name %>
        <% post.errors.full_messages_for(:name).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :price %><br>
        <%= form.number_field :price, step: 0.01 %>
        <% post.errors.full_messages_for(:price).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :quantity %><br>
        <%= form.number_field :quantity %>
        <% post.errors.full_messages_for(:quantity).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :details %><br>
        <%= form.text_area :details %>
        <% post.errors.full_messages_for(:details).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>