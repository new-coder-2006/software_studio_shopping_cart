<h1>Your Orders</h1>

<% @ordered_items.each do |ordered_item| %>
    <div class="ordered_item">
      <% item = Item.find(ordered_item.id) %>
      <% if item.image.attached? %>
        <%= image_tag item.image %>
      <% end %>
      <h2><%= ordered_item.name %></h2>
      <p><%= ordered_item.price %></p>
      <p><%= ordered_item.created_at %></p>
    </div>
<% end %>